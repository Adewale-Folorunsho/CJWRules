<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Name and Display Name -->
    <key>CFBundleName</key>
    <string>CJWRules</string>
    <key>CFBundleDisplayName</key>
    <string>CJWRules</string>
    
    <!-- Bundle Identifier -->
    <key>CFBundleIdentifier</key>
    <string>com.CJ-Projects.CJWRules</string>
    
    <!-- URL Types for Spotify Callback -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <!-- Unique app scheme based on app name -->
                <string>cjwrules</string>
            </array>
            <key>CFBundleURLName</key>
            <string>com.CJ-Projects.CJWRules</string>
        </dict>
    </array>
    
    <!-- App Transport Security Settings -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>spotify.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- Background Modes (if needed for audio) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
    
    <!-- Privacy Descriptions -->
    <key>NSMicrophoneUsageDescription</key>
    <string>We need microphone access for audio playback features</string>
    
    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
    </array>
    
    <!-- Required Device Capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
</dict>
</plist>
